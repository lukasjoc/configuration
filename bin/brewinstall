#!/bin/sh

if ! command -v "brew" >/dev/null 2>&1;  then
  echo "Brew not installed..."
  echo "Run /usr/bin/ruby -e '$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)' to install it..."
  echo "Happy brewing. :)"
fi

# Langs
echo "Installing Langs..."
brew install python # :ok
brew install r      # :r
brew install go   	# :)
brew install rust 	# :))
brew install nim  	# :)))
brew install node 	# :(

# Development Tools
echo "Installing Development Tools..."
brew install git
brew install ack
brew install bash
brew install tmux
brew install tree
brew install watch
brew install curl
brew install wget
brew install nmap
brew install macvim
#===

# Other helpful stuff
echo "Installing other helpful stuff..."
brew install exercism # ðŸ‘‘
brew install figlet
brew install fortune
brew install htop
brew install iproute2mac
brew install colordiff
#===

# Install Casks
echo "Installing caskrooms..."
brew cask install alfred
brew cask install authy
brew cask install cleanmymac
brew cask install docker
brew cask install qbittorrent
brew cask install spectacle
brew cask install brave-browser
brew cask install virtualbox
brew cask install xquartz
brew cask install macvim
brew cask install textmate
#===


brew doctor

echo "DONE"
