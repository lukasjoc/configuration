#!/bin/bash

go_ls() {
  find . -name "*CONFLICT*" |
  while IFS= read -r line
  do
    echo "$line"
  done
}

go_for_it() {
  find . -name "*CONFLICT*" |
  while IFS= read -r line
  do
    sudo rm -rf "$line"
  done
}

go_ls
echo

while true; do
  read -rp "Delete these files? [N/y]" input
  case $input in 
  [yY][eE][sS]|[yY]*)
    go_for_it
    break;;
  [nN][oO]|[nN]*)
    echo "Exiting..."
    exit;;
  *)
    echo "Exiting..."
    exit;;
  esac
done
